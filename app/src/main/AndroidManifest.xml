<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.samarthappwork.mitaskassigner">

    <uses-permission-sdk-23 android:name="android.permission.INTERNET" />
    <uses-permission-sdk-23 android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission-sdk-23 android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mitaskassigner">
        <activity
            android:name=".Alltask_activity"
            android:exported="false" />
        <activity
            android:name=".coordies_activity"
            android:exported="false" />
        <activity
            android:name=".signup_activity"
            android:exported="false" />
        <activity
            android:name=".Login_activity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.Mitaskassigner.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".add_task_activity"
            android:exported="false"
            android:label="@string/title_activity_add_task"
            android:theme="@style/Theme.Mitaskassigner.NoActionBar" />
        <activity
            android:name=".Event_activity"
            android:exported="false"
            android:label="@string/title_activity_event"
            android:theme="@style/Theme.Mitaskassigner.NoActionBar" />
        <activity
            android:name=".add_event_activity"
            android:exported="false"
            android:label="@string/title_activity_add_event"
            android:theme="@style/Theme.Mitaskassigner.NoActionBar" />
        <activity
            android:name=".notification_activity"
            android:exported="false"
            android:label="@string/title_activity_notification"
            android:theme="@style/Theme.Mitaskassigner.NoActionBar" />
        <activity
            android:name=".tasks_activity"
            android:exported="false"
            android:label="@string/title_activity_tasks"
            android:theme="@style/Theme.Mitaskassigner.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name" />
    </application>

</manifest>