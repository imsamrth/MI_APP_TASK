<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:background="@drawable/rounded_square"
    android:paddingVertical="4dp"
    tools:context="">

    <ImageView
        android:id="@+id/event_layout_image"
        android:layout_width="match_parent"
        android:layout_height="240dp"

        android:layout_marginTop="16dp"
        android:background="@drawable/signup_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/event_layout_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="4dp"
        android:src="@drawable/outline_emoji_events_20"
        app:civ_border_color="@color/black"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/event_layout_image"
        app:layout_constraintStart_toStartOf="@+id/event_layout_image" />

    <TextView
        android:id="@+id/task_layout_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:paddingHorizontal="4dp"
        android:text="Department_name"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/event_layout_icon"
        app:layout_constraintStart_toEndOf="@+id/event_layout_icon"
        app:layout_constraintTop_toTopOf="@+id/event_layout_icon" />

    <TextView
        android:id="@+id/task_layout_pending"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@drawable/smallviewbackground"
        android:gravity="center"
        android:text="Pending"
        android:textColor="@color/design_default_color_error"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/task_layout_share"
        app:layout_constraintEnd_toStartOf="@+id/task_layout_share"
        app:layout_constraintTop_toTopOf="@+id/event_layout_image" />

    <TextView
        android:id="@+id/task_layout_daystogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Days_toGo"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_layout_image" />

    <TextView
        android:id="@+id/task_layout_eventname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:text="Event_name"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_layout_image" />

    <ImageView
        android:id="@+id/task_layout_share"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="4dp"
        android:src="@drawable/outline_share_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/event_layout_image" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginHorizontal="4dp"
        android:src="@drawable/outline_pending_actions_24"
        app:layout_constraintBottom_toBottomOf="@+id/task_layout_pending"
        app:layout_constraintEnd_toStartOf="@+id/task_layout_pending"
        app:layout_constraintTop_toTopOf="@+id/task_layout_pending" />

</androidx.constraintlayout.widget.ConstraintLayout>